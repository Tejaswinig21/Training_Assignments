    <filter>
        <filter-name>f1</filter-name>
        <filter-class>com.myapp.web.filter.Myfilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>f1</filter-name>
        <url-pattern>/servlet1/*</url-pattern>
    </filter-mapping>
</web-app>