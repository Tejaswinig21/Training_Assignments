    <servlet>
        <servlet-name>User</servlet-name>
        <servlet-class>com.myapp.web.filter.Login</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>User</servlet-name>
        <url-pattern>/servlet1/*</url-pattern>
